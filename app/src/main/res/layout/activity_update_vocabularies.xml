<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_vocabularies">

    <ImageButton
        android:id="@+id/AddWord"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:adjustViewBounds="false"
        android:background="@xml/button_select"
        android:contentDescription="TODO"
        android:onClick="AddButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_meaning"
        app:layout_constraintTop_toBottomOf="@+id/add_meaning"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/beee" />

    <ImageButton
        android:id="@+id/CancelAdd"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:adjustViewBounds="false"
        android:background="@xml/button_select"
        android:contentDescription="TODO"
        android:onClick="CancleButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/AddWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddWord"
        app:layout_constraintTop_toBottomOf="@+id/AddWord"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/beee" />

    <EditText
        android:id="@+id/Add_spelling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Spelling"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:hint="Meaning"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Add_spelling"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Add_spelling"
        app:layout_constraintTop_toBottomOf="@+id/Add_spelling" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@+id/AddWord"
        app:layout_constraintEnd_toStartOf="@+id/AddWord"
        app:layout_constraintTop_toTopOf="@+id/AddWord"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="@+id/CancelAdd"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/CancelAdd" />
</androidx.constraintlayout.widget.ConstraintLayout>