<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ImageButton
        android:id="@+id/wordBank"
        android:layout_width="115dp"
        android:layout_height="79dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        android:background="@xml/button_select"
        android:contentDescription="TODO"
        android:onClick="wordBankButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beee" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="115dp"
        android:layout_height="79dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="false"
        android:background="@xml/button_select"
        android:onClick="logOutButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/Review"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Review"
        app:layout_constraintTop_toBottomOf="@+id/Review"
        app:srcCompat="@drawable/beee" />

    <ImageButton
        android:id="@+id/Review"
        android:layout_width="115dp"
        android:layout_height="79dp"
        android:layout_marginTop="52dp"
        android:adjustViewBounds="false"
        android:background="@xml/button_select"
        android:onClick="reviewButtonClicked"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/wordBank"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wordBank"
        app:layout_constraintTop_toBottomOf="@+id/wordBank"
        app:srcCompat="@drawable/beee" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:text="Word Bank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/wordBank"
        app:layout_constraintEnd_toStartOf="@+id/wordBank"
        app:layout_constraintTop_toTopOf="@+id/wordBank" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/Review"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/Review" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/logout" />

</androidx.constraintlayout.widget.ConstraintLayout>